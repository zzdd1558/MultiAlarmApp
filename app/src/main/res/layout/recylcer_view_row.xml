<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_recycler_cardview"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    >

    <LinearLayout
        android:id="@+id/alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/alarm_am_pm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="오전"
            android:layout_weight="0.1"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="3:50" android:clickable="false"
            android:layout_weight="0.2"
            />

        <TextView
            android:id="@+id/alarm_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:clickable="false"
            android:layout_weight="0.25"/>

        <TextView
            android:id="@+id/alarm_day"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:clickable="false"
            android:gravity="center"
            android:text="8월 28일 (화)"
            android:layout_weight="0.25"/>

        <Switch
            android:id="@+id/alarm_yn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:gravity="center"
            android:layout_weight="0.2"/>

    </LinearLayout>

</android.support.v7.widget.CardView>